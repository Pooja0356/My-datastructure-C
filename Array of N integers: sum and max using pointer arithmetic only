#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    printf("Enter N: ");
    if (scanf("%d", &n) != 1 || n <= 0) return 0;

    int *a = (int*)malloc(n * sizeof(int));
    if (!a) return 0;

    printf("Enter %d integers:\n", n);
    for (int i = 0; i < n; i++) scanf("%d", a + i);

    int sum = 0;
    int max = *(a);            // pointer arithmetic only
    for (int i = 0; i < n; i++) {
        int val = *(a + i);
        sum += val;
        if (val > max) max = val;
    }

    printf("Sum = %d\nMax = %d\n", sum, max);
    free(a);
    return 0;
}
